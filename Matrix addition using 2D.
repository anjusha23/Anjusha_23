Question:C program to perform matrix addition using 2D.
Code:
#include <iostream>
using namespace std;
int main()
{
    int r,c;
    cin>>r>>c;
    int m[r][c],n[r][c];
    for (int i=0;i<r;i++)
    {
        for(int j=0;j<c;j++)
        {
            cin>>m[i][j];
        }
    }
    for (int i=0;i<r;i++)
    {
        for(int j=0;j<c;j++)
        {
            cin>>n[i][j];
        }
        cout<<endl;
    }
    for (int i=0;i<r;i++)
    {
        for(int j=0;j<c;j++)
        {
            cout<<(n[i][j])+(m[i][j])<<" ";
        }
        cout<<endl;
    }
    
}
    
