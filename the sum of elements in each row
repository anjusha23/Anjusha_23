Question:A program to find the sum of elements in each row
Code:
#include <iostream>
using namespace std;
int main()
{
    int r,c;
    int b=0;
    cin>>r>>c;
    int m[r][c],n[r][c];
    for (int i=0;i<r;i++)
    {
        for(int j=0;j<c;j++)
        {
            cin>>m[i][j];
        }
    }
    for (int i=0;i<r;i++)
    {
        for(int j=0;j<c;j++)
        {
           
            b=b+m[i][j];
        }cout<<b<<endl;
        b=0;
    }
   
   
}
